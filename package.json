{
  "name": "everyday-app",
  "version": "0.0.1",
  "author": "how-it",
  "description": "A picture and a word everyday.",
  "license": "GPL-3.0",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run render:dev\" \"npm run electron:dev\"",
    "build": "npm run render:build && npm run electron:build",
    "render:dev": "vite",
    "render:build": "vue-tsc --noEmit && vite build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --win",
    "preview": "vite preview",
    "commit": "git cz"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "16.0.6",
    "electron-builder": "^22.14.5",
    "sass": "^1.49.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vue-tsc": "^0.29.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
